<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <com.peer_messanger.util.custom_view.AvatarImageView
        android:id="@+id/aim_paired_device"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        app:avatarBackgroundColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textColor="@color/text_color_3"
        app:textSize="20sp"
        app:srcCompat="@drawable/ic_bluetooth"
        app:view_state="IMAGE"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_paired_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/aim_paired_device"
        app:layout_constraintTop_toTopOf="@+id/aim_paired_device"
        tools:text="Device name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_lastMessage_paired_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/text_color_3"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/aim_paired_device"
        app:layout_constraintStart_toEndOf="@+id/aim_paired_device"
        tools:text="Mac address" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_lastMessage_paired_device" />
</androidx.constraintlayout.widget.ConstraintLayout>